<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffd400"
    android:gravity="center_vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.kurmanosiuntinys.ActivityCodes" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Greitai čia bus paštai ir pašto dėžutės\ndabar galite pasinaudoti esančia www.post.lt"
        android:textColor="@android:color/primary_text_light" />

    <Button
        android:id="@+id/redirectPosts"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text="Atidaryti tinklalapyje" />

</RelativeLayout>
