<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".ActivitySettings" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffFFD400"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settings_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <Switch
                android:id="@+id/switchAutoUpdate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:text="Periodiškai tikrinti"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/primary_text_dark" />

            <LinearLayout
                android:id="@+id/changeTimer"
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Intervalas:"
                    android:textColor="@android:color/primary_text_light" />

                <TextView
                    android:id="@+id/valueTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="6 valandos"
                    android:textColor="@android:color/primary_text_light" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="left|center_vertical"
                android:text="Garsiniai pranešimai"
                android:textColor="@android:color/primary_text_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settings_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <Switch
                android:id="@+id/switchSilence"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:text="Tylusis režimas"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/valueSilence"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="23:00 - 8:00"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/primary_text_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settings_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Informacijos rikiavimas"
                android:textAppearance="?android:attr/textAppearance" />

            <TextView
                android:id="@+id/valueShort"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Naujausia viršuje"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/primary_text_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settings_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <Switch
                android:id="@+id/switchAutoHide"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:text="Slėpti pristatytas siuntas"
                android:textColor="@android:color/primary_text_dark" />

            <LinearLayout
                android:id="@+id/changeHide"
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Senesnes nei:"
                    android:textColor="@android:color/primary_text_light" />

                <TextView
                    android:id="@+id/valueHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1 savaitė"
                    android:textColor="@android:color/primary_text_light" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/settings_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Debug"
                android:textAppearance="?android:attr/textAppearance" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Ištrinti visus numerius"
                android:textColor="@android:color/primary_text_light" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>